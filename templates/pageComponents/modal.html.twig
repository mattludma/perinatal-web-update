<div class="modal" id="pribeh-moje-zkušenost-s-ptds" role="dialog" aria-labelledby="dialog-title-3">
  <div class="modal__wrapper">
    <div class="modal__close js-modal-close">
      <span class="icon icon--icon-close-color">
        <svg class="icon__svg"><use xlink:href="#icon-close-color"></use></svg>
